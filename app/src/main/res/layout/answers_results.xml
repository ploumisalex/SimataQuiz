<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutId"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="0"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/listItemCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="cat"
            android:textAllCaps="false"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/questiontextR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/layoutId"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="question"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/questionimgR"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/questiontextR"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:visibility="visible" />

    <Button
        android:id="@+id/option1btnR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionimgR"
        android:layout_marginTop="24dp"
        android:background="@color/btnbg"
        android:text="option1"
        android:textAllCaps="false"
        android:padding="8dp"
        android:clickable="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/option2btnR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option1btnR"
        android:layout_marginTop="4dp"
        android:background="@color/btnbg"
        android:text="option2"
        android:textAllCaps="false"
        android:padding="8dp"
        android:clickable="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/option3btnR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option2btnR"
        android:layout_marginTop="4dp"
        android:background="@color/btnbg"
        android:text="option3"
        android:textAllCaps="false"
        android:padding="8dp"
        android:clickable="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_below="@+id/option3btnR"
        android:layout_marginTop="4dp"
        android:background="@color/delete"
        android:text="Αφαίρεση ερώτησης"
        android:textAllCaps="false"
        android:padding="4dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:textColor="@color/white" />

</RelativeLayout>